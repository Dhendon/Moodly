<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:textColor="#fffefffd"
    android:textSize="30sp"
    android:layout_gravity="center_horizontal|bottom">
    <item>
        <layer-list>
            <item android:top="5dp">
                <shape>
                    <gradient android:type="radial" android:gradientRadius="5000%"
                        android:endColor="#00F0F0F0"
                        android:startColor="#FF040404"
                        android:centerX="50%"
                        android:centerY="50%"/>
                    <corners android:radius="5dp" />
                    <padding android:bottom="5dp" android:top="5dp"
                        android:left="5dp" android:right="5dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="7dp" />
                    <solid android:color="@color/hard_yellow_shadow" />
                </shape>
            </item>
            <item android:bottom="5dp" android:right="2dp">
                <shape>
                    <solid android:color="@color/hard_yellow"/>
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="1px"
                        android:color="#33FFFFFF" />
                </shape>
            </item>

        </layer-list>
    </item>
 </selector>